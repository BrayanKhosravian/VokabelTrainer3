<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VokabelTrainer3.Views.ChapterSelectionListViewPage">
  
    <ListView ItemsSource="{Binding Chapters}"
              SelectedItem="{Binding IsSelected, Mode=TwoWay}"
              GroupDisplayBinding="{Binding ChapterGroup.Name}"
              ItemTapped="Handle_ItemTapped"
              IsGroupingEnabled="True"
              CachingStrategy="RecycleElement">
            
        <!--Built in Cells-->
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextCell Text="{Binding Chapter.Name}" />
            </DataTemplate>
        </ListView.ItemTemplate>
   
  </ListView>
</ContentPage>
